# .env.example

# Google AI Studio
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Model configuration
MODEL_NAME=gemini-2.0-flash
MAX_TOKENS=1000
TEMPERATURE=0.7

# ElevenLabs (Text-to-Speech and Speech-to-Text)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-elevenlabs-voice-id-here

# Google Cloud (Speech-to-Text and alternative TTS)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS=path/to/your/calendar-credentials.json
GOOGLE_CALENDAR_TOKEN=path/to/your/calendar-token.json

# Application configuration
APP_HOST=localhost
APP_PORT=8000
DEBUG=True

# Database
DATABASE_URL=sqlite:///./smart_scheduler.db

# Voice configuration
DEFAULT_VOICE_LANGUAGE=en-US
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024